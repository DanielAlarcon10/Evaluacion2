<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Home_act">

    <ViewFlipper
        android:id="@+id/slider"
        android:layout_width="436dp"
        android:layout_height="475dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ViewFlipper>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="425dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="205dp"
                android:layout_height="122dp"
                android:onClick="Prestamos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dinero_men" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="205dp"
                android:layout_height="123dp"
                android:onClick="Clientes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/perfil_men" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="126dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:text="Gestionar Clientes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton4"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/imageButton" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="146dp"
                android:layout_height="32dp"
                android:layout_marginBottom="12dp"
                android:text="Calcular Prestamos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageButton4"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="@+id/imageButton4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </TableRow>

    <TableRow
        android:layout_width="433dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="209dp"
                android:layout_height="141dp"
                android:background="#FFFFFF"
                android:onClick="Seguridad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton6"
                app:layout_constraintHorizontal_bias="0.64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/secure_men" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="199dp"
                android:layout_height="133dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#FFFFFF"
                android:onClick="Informacion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/info_men" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="89dp"
                android:layout_height="26dp"
                android:layout_marginBottom="24dp"
                android:text="Seguridad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageButton5"
                app:layout_constraintHorizontal_bias="0.591"
                app:layout_constraintStart_toStartOf="@+id/imageButton5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="88dp"
                android:layout_height="28dp"
                android:layout_marginBottom="20dp"
                android:text="InformaciÃ³n"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageButton6"
                app:layout_constraintHorizontal_bias="0.572"
                app:layout_constraintStart_toEndOf="@+id/imageButton5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>