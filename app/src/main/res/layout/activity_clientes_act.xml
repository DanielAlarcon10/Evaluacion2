<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs"
    tools:context=".Clientes_act">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078"
        app:srcCompat="@drawable/base" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="394dp"
        android:layout_height="224dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.092">

        <EditText
            android:id="@+id/et_codigo"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Ingrese Codigo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="Ingrese Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_salario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Ingrese Salario"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="298dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.523">

        <Button
            android:id="@+id/guardar_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:onClick="Guardar"
            android:text="GUARDAR CLIENTES" />

        <Button
            android:id="@+id/mostrar_btn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:onClick="Mostrar"
            android:text="MOSTRAR CLIENTES" />

        <Button
            android:id="@+id/eliminar_btn"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:onClick="Eliminar"
            android:text="ELIMINIAR CLIENTE" />

        <Button
            android:id="@+id/actualizar_btn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:onClick="Actualizar"
            android:text="ACTUALIZAR CLIENTE" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>